<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> User: <%= user.name + " " + user.surname %> </title>
    <link rel="stylesheet" href="/styles.css">
    <script src="/scripts.js"></script>
</head>
<body>
<!-- Navigation -->
<header>
    <nav>
        <ul>
            <li><a href="/homePage">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Tracker</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>
</header>

<!-- User Information -->
<div>
    <!-- card div -->
    <div>
        <% var userKeys = Object.keys(user); %>
        <ul>
            <% for (var i = 0; i < userKeys.length; i++) { %>
                <% if (userKeys[i] !== "password") { %>
                    <li>
                        <% if (userKeys[i] === "picture"){ %>
                            <img src="<%= user.picture %>" alt="Picture" class="rounded-lg shadow-md">
                        <% } else { %>
                            <%= userKeys[i] %>: <b> <%= user[userKeys[i]] %> </b>
                        <% } %>
                    </li>
                <% } %>
            <% } %>
        </ul>

        <div>
            <button type="submit" value="submit" onclick="forwardToEditUserPage()">Edit</button>
            <button type="submit" value="submit" onclick="deleteUser()">Delete</button>
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <p>Â© 2023 Fitness Tracker. All rights reserved.</p>
</footer>
</body>
</html>
