<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User: <%= user.name + " " + user.surname %></title>
    <link rel="stylesheet" href="/user.css">
    <script src="/scripts.js"></script>
    <script>
        function forwardToEditUserPage() {
            window.location = <%= user.id %> + '/edit';
        }
    </script>
</head>

<body>
<!-- Navigation -->
<header>
    <nav>
        <div id="logo">
            <a href="/">MyGymBro</a>
        </div>
        <div id="nav-items">
            <ul>
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/logout">Logout</a></li>
                <li class="dropdown">
                    <a href="#">Services</a>
                    <div class="dropdown-content">
                        <a href="/makeExercise">Make Workout Plans</a>
                        <a href="/workoutPlans">Workout Plans</a>
                        <a href="/getUserCalories">Calories Chart</a>
                        <a href="/inputFood">Calculate Calories</a>
                        <a href="/calculate">BMI</a>
                        <a href="/goals">Set Goals</a>
                    </div>
                </li>
                <li><a href="/isloged">Profile</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- User Information -->
<main>
    <div class="container">

    <div class="user-card">
        <div class="user-picture">
            <img class="rounded-img" id="user-picture" alt="The user picture " src="<%= user.picture %>">
        </div>
        <ul class="flexbox">
            <li class="aligner">
                <div>Name:</div>
                <b><%= user.name %></b>
            </li>
            <li class="aligner">
                <div>Surname:</div>
                <b><%= user.surname %></b>
            </li>
            <li class="aligner">
                <div>Email:</div>
                <b><%= user.email %></b>
            </li>
            <li class="aligner">
                <div>Exercise goal:</div>
                <b><%= user.daily_exercise_minutes_goal %></b>
            </li>
            <li class="aligner">
                <div>Calorie goal:</div>
                <b><%= user.daily_calorie_goal %></b>
            </li>
        </ul>


        <div class="button-container">
            <button type="submit" value="submit" onclick="forwardToEditUserPage()" class="edit">Edit</button>
            <form id="deleteUser" action="<%= user.id %>/delete" method="POST">
                <button type="submit" value="submit" class="delete">Delete</button>
            </form>
        </div>
    </div>
    </div>
</main>

<!-- Footer -->
</body>

</html>
