<!DOCTYPE html>
<html lang="en">
<head>
    <title>All users</title>
    <link rel="stylesheet" href="/users.css"/>
</head>
<body >



<div >
    <% if (users.length > 0) { %>

        <% users.forEach(user => { %>

            <!-- card div -->
            <div >

                <div >

                    <!-- image div -->
                    <div >
                        <img src="<%= user.picture %>" >
                    </div>

                    <div >
                        <div >
                            <div >name:</div>
                            <p ><%= user.name %></p>
                        </div>

                        <div >
                            <span >surname:</span>
                            <p ><%= user.surname %></p>
                        </div>

                        <div >
                            <span >email:</span>
                            <p ><%= user.email %></p>
                        </div>

                    </div>
                </div>

                <div class="actions flex items-center">
                    <a href="/users/<%= user.id %>/view">View</a>
                    <a href="/users/<%= user.id %>/edit">Edit</a>
                    <a href="/users/<%= user.id %>/delete" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
</body>
</html>