<!DOCTYPE html>
<html lang="en">
<head>
    <title>All users</title>
    <link rel="stylesheet" href="/styles.css"/>
</head>
<body class="bg-gray-100">

<nav class="bg-blue-500 flex justify-between items-center py-5 shadow-md">
    <a href="./" class="text-white text-xl font-medium pl-20">LocalDoctor</a>
    <div class="flex space-x-4">
        <a href="#" class="text-white hover:text-blue-200">Blog</a>
        <a href="#" class="text-white hover:text-blue-200">Users</a>
        <a href="./users/profile" class="text-white hover:text-blue-200">Profile</a>
        <a href="./login" class="text-white hover:text-blue-200">Login</a>
        <a href="./logout" class="text-white hover:text-blue-200 pr-20">Logout</a>
    </div>
</nav>

<div class="centeredContent">
    <% if (users.length > 0) { %>

        <% users.forEach(user => { %>

            <!-- card div -->
            <div class="my-6 mx-60 bg-white p-6 rounded-lg shadow-md">

                <div class="flex items-start">

                    <!-- image div -->
                    <div class="w-32 max-h-32 bg-gray-100 flex rounded-md shad mb-4">
                        <img src="<%= user.picture %>" alt="Picture" class="object-cover rounded-lg shadow-lg">
                    </div>

                    <div class="mx-4">
                        <div class="flex">
                            <div class="mr-2">name:</div>
                            <p class="text-gray-600"><%= user.name %></p>
                        </div>

                        <div class="flex">
                            <span class="mr-2">surname:</span>
                            <p class="text-gray-600"><%= user.surname %></p>
                        </div>

                        <div class="flex">
                            <span class="mr-2">email:</span>
                            <p class="text-gray-600"><%= user.email %></p>
                        </div>

                        <div class="flex mb-4">
                            <span class="mr-2">info:</span>
                            <p class="text-gray-600"><%= user.info %></p>
                        </div>
                    </div>
                </div>

                <div class="actions flex items-center">
                    <a href="/users/<%= user.id %>" class="mr-4 bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-5 rounded right-10 shadow-sm">View</a>
                    <a href="/users/<%= user.id %>/edit" class="mr-4 hover:bg-blue-200 border border-gray-200 py-2 px-5 rounded shadow-sm">Edit</a>
                    <a href="/users/<%= user.id %>/delete" onclick="return confirm('Are you sure you want to delete this user?');" class="mr-2 text-gray-500">Delete</a>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
</body>
</html>