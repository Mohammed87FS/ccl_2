<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <link rel="stylesheet" href="/user.css">
</head>
<body>
<!-- Navigation -->
<header>
    <nav>
        <div id="logo">
            <a href="/">MyGymBro</a>
        </div>

        <div id="nav-items">
            <ul>
                <li class="dropdown">
                    <a href="#">Services</a>
                    <div class="dropdown-content">
                        <a href="/makeExercise">Make Workout Plans</a>
                        <a href="/workoutPlans">Workout Plans</a>
                        <a href="/getUserCalories">Calories Chart</a>
                        <a href="/inputFood">Calculate Calories</a>
                        <a href="/calculate">BMI</a>
                        <a href="/goals">Set Goals</a>
                    </div>
                </li>
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/logout">Logout</a></li>
                <li><a href="/isloged">Profile</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- Users Information -->
<div>
    <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
            <!-- card div -->
            <div>
                <div>
                    <!-- image div -->
                    <div>
                        <img src="<%= user.picture %>">
                    </div>

                    <div>
                        <div>
                            <div>name:</div>
                            <p><%= user.name %></p>
                        </div>

                        <div>
                            <span>surname:</span>
                            <p><%= user.surname %></p>
                        </div>

                        <div>
                            <span>email:</span>
                            <p><%= user.email %></p>
                        </div>
                    </div>
                </div>

                <div class="actions flex items-center">
                    <a href="/user/<%= user.id %>">View</a>
                    <a href="/user/<%= user.id %>/edit">Edit</a>
                    <form action="/user/<%= user.id %>/delete" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No users found</p>
    <% } %>
</div>

<!-- Footer -->

</body>
</html>
