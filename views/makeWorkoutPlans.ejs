    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<!-- Navigation -->
<header>
    <nav>
        <div id="logo">
            <a href="/">MyGymBro</a>
        </div>

        <div id="nav-items">
            <ul>

                <li class="dropdown">
                    <a href="#">Services</a>
                    <div class="dropdown-content">
                        <a href="/inputFood">Calculate Calories</a>
                        <a href="/getUserCalories">Calories Chart</a>
                        <a href="/makeExercise">Make Workout Plans</a>
