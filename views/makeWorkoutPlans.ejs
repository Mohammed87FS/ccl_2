            </ul>
        </div>
    </nav>
</header>

<!-- Registration Form -->
<div class="container">
    <form action="/submitExercise" method="post" enctype="multipart/form-data" class="form">
        <h2 class="form-title">Exercise Form</h2>
        <label for="name" class="form-label">Name:</label>
        <input type="text" name="name" id="name" required class="form-input">

        <label for="description" class="form-label">Description:</label>
        <input type="text" name="description" id="description" required class="form-input">

        <label for="bodypart" class="form-label">Body-Part:</label>
        <input type="text" name="bodypart" id="bodypart" required class="form-input">


        <label for="picture" class="form-label">Picture:</label>
        <input type="file" name="picture" id="picture" accept="image/*" required class="form-input">

        <button type="submit" class="form-button">Submit Exercise</button>
    </form>
</div>

<!-- Footer -->

</body>
</html>
