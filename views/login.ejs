<!-- Login Form -->
<div class="container">


    <form action="/login" method="post" class="form">
        <h2 class="form-title">Login Form</h2>
        <div class="form-group">
            <label for="email" class="form-label"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" required class="form-input">
        </div>

        <div class="form-group">
            <label for="psw" class="form-label"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required class="form-input">
        </div>

        <button type="submit" class="form-button">Login</button>

        <div class="form-footer">
            <button type="button"  class="cansl">Cancel</button>

        </div>
    </form>
</div>

<!-- Footer -->

</body>
