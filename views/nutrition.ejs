<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nutrition Information</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<!-- Navigation -->
<header>
    <nav>
        <div id="logo">
            <a href="/">MyGymBro</a>
        </div>

        <div id="nav-items">
            <ul>
                <li class="dropdown">
                    <a href="#">Services</a>
                    <div class="dropdown-content">
                        <a href="/makeExercise">Make Workout Plans</a>
                        <a href="/workoutPlans">Workout Plans</a>
                        <a href="/getUserCalories">Calories Chart</a>
                        <a href="/inputFood">Calculate Calories</a>
                        <a href="/calculate">BMI</a>
                        <a href="/goals">Set Goals</a>
                    </div>
                </li>
                <li><a href="/register">Register</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/logout">Logout</a></li>
                <li><a href="/isloged">Profile</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- Nutrition Information -->
<h1>Nutrition Information</h1>

<% if (data) { %>
    <div>
        <h2>Calories: <%= data.calories %></h2>
        <h3>Diet Labels:</h3>
        <ul>
            <% data.dietLabels.forEach(label => { %>
                <li><%= label %></li>
            <% }); %>
        </ul>
        <h3>Health Labels:</h3>
        <ul>
            <% data.healthLabels.forEach(label => { %>
                <li><%= label %></li>
            <% }); %>
        </ul>
    </div>
<% } else { %>
    <p>No nutrition data available.</p>
<% } %>

<!-- Footer -->

</body>
</html>
